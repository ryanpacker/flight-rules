{
  "name": "flight-rules",
  "version": "0.5.4",
  "description": "An opinionated framework for AI-assisted software development",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "flight-rules": "dist/index.js"
  },
  "files": [
    "dist",
    "payload"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanpacker/flight-rules.git"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
